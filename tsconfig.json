{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },

  "extends": "./.nuxt/tsconfig.json", // 讀得到 ref
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "env.d.ts",
    ".nuxt/nuxt.d.ts",
    "**/*"
  ],
  "exclude": ["node_modules"]
}
